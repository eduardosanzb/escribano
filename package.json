{
  "name": "escribano",
  "version": "1.0.0",
  "description": "AI-powered session intelligence tool",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome ci .",
    "escribano": "tsx --env-file=.env src/index.ts",
    "list": "tsx --env-file=.env src/index.ts list",
    "transcribe-latest": "tsx --env-file=.env  src/index.ts transcribe-latest",
    "classify-latest": "tsx --env-file=.env  src/index.ts classify-latest",
    "classify": "tsx --env-file=.env  src/index.ts classify",
    "extract-metadata-latest": "tsx --env-file=.env  src/index.ts extract-metadata-latest",
    "extract-metadata": "tsx --env-file=.env  src/index.ts extract-metadata",
    "restart-latest": "tsx --env-file=.env  src/index.ts restart-latest",
    "list-artifacts": "tsx --env-file=.env  src/index.ts list-artifacts",
    "generate-artifact": "tsx --env-file=.env  src/index.ts generate-artifact",
    "sessions": "tsx --env-file=.env src/index.ts sessions",
    "generate": "tsx --env-file=.env src/index.ts generate",
    "artifacts": "tsx --env-file=.env src/index.ts artifacts",
    "sync": "tsx --env-file=.env src/index.ts sync",
    "sync-all": "tsx --env-file=.env src/index.ts sync-all",
    "db:reset": "rm -f ~/.escribano/escribano.db"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "uuidv7": "1.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  }
}
