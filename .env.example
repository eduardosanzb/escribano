# Escribano Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Transcription
# =============================================================================
ESCRIBANO_PARALLEL_TRANSCRIPTION=false

# =============================================================================
# Visual Pipeline
ESCRIBANO_FRAME_INTERVAL=2
ESCRIBANO_FRAME_WIDTH=1920

# Outline Publishing
ESCRIBANO_OUTLINE_URL=https://notes.eduardosanzb.dev
ESCRIBANO_OUTLINE_TOKEN=
ESCRIBANO_OUTLINE_COLLECTION=Escribano Sessions

# Embedding model for semantic clustering
# Optimized for qwen3-embedding:8b on Apple Silicon
ESCRIBANO_EMBED_MODEL=qwen3-embedding:8b
OLLAMA_CONTEXT_LENGTH=40000

# Clustering sensitivity
ESCRIBANO_CLUSTER_TIME_WINDOW=600
ESCRIBANO_CLUSTER_DISTANCE_THRESHOLD=0.4

# =============================================================================
# EMBEDDING PARALLELISM
# =============================================================================
# Batch size for embedding requests (default: 64)
ESCRIBANO_EMBED_BATCH_SIZE=64

# Number of concurrent embedding requests (default: 4)
# Should match OLLAMA_NUM_PARALLEL for optimal performance
ESCRIBANO_EMBED_CONCURRENCY=4

# Embedding model (default: qwen3-embedding:8b)
ESCRIBANO_EMBED_MODEL=qwen3-embedding:8b

# V3 Frame Sampling
ESCRIBANO_SAMPLE_INTERVAL=10
ESCRIBANO_SAMPLE_GAP_THRESHOLD=15
ESCRIBANO_SAMPLE_GAP_FILL=3

# V3 VLM Batching
ESCRIBANO_VLM_BATCH_SIZE=10
ESCRIBANO_VLM_MODEL=qwen3-vl:4b
ESCRIBANO_FRAME_WIDTH=1024
